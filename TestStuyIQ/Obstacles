
class Obstacle extends GameObject {
    private PApplet sketch;
    private float size;

    public Obstacle(PApplet sketch, float x, float y, float size) {
        super(new PVector(x, y));
        this.sketch = sketch;
        this.size = size;
    }

    public void display() {
        sketch.fill(0, 0, 255);
        sketch.rectMode(sketch.CENTER);
        sketch.rect(position.x, position.y, size, size);
    }

    public float getSize() {
        return size;
    }
}
