class Player {
    private PApplet sketch;
    private PVector position;
    private float size;

    public Player(PApplet sketch) {
        this.sketch = sketch;
        position = new PVector(sketch.width / 2, sketch.height / 2);
        size = 30;
    }

    public void display() {
        sketch.fill(255, 0, 0);
        sketch.rectMode(sketch.CENTER);
        sketch.rect(position.x, position.y, size, size);
    }

    public void moveUp() {
        position.y -= 5;
    }

    public void moveDown() {
        position.y += 5;
    }

    public void moveLeft() {
        position.x -= 5;
    }

    public void moveRight() {
        position.x += 5;
    }

    public void reset() {
        position = new PVector(sketch.width / 2, sketch.height / 2);
    }

    public boolean collects(Coin[] coins) {
        for (Coin coin : coins) {
            if (collidesWith(coin)) {
                coin.setCollected(true);
            }
        }
        for (Coin coin : coins) {
            if (!coin.isCollected()) {
                return false;
            }
        }
        return true;
    }

    public boolean collidesWith(GameObject object) {
        float d = PVector.dist(position, object.getPosition());
        return d < (size + object.getSize()) / 2;
    }
}

